{
  "name": "@coterminous/ui-lib",
  "version": "1.0.0",
  "description": "Reusable components for React projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/otttooming/@coterminous/ui-lib.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "start-storybook -p 9001 -c .storybook --ci",
    "build": "npm run clean && NODE_ENV=production webpack && npm run build:types",
    "build:lib": "npm run build",
    "build:lib:watch": "npm run build:watch",
    "build:types": "tsc -p tsconfig.dist.json --extendedDiagnostics",
    "build:watch": "nodemon",
    "clean": "rm -rf dist",
    "prettier": "prettier --write --config .prettierrc \"**/*.{js,jsx,ts,tsx,json,css,scss,md,yaml,yml}\"",
    "test": "jest --no-cache",
    "test:watch": "jest --watch",
    "test:update": " jest -u"
  },
  "author": "Ott Tooming",
  "license": "ISC",
  "dependencies": {
    "downshift": "^3.2.10",
    "react-photoswipe": "1.3.0",
    "react-popper": "^1.3.3",
    "styled-system": "^4.2.2"
  },
  "peerDependencies": {
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "styled-components": "4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.4",
    "@babel/plugin-external-helpers": "7.2.0",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-proposal-decorators": "7.4.4",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-transform-async-to-generator": "7.4.4",
    "@babel/plugin-transform-modules-commonjs": "7.4.4",
    "@babel/plugin-transform-runtime": "7.4.4",
    "@babel/polyfill": "7.4.4",
    "@babel/preset-env": "7.4.4",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@babel/runtime": "7.4.4",
    "@storybook/addon-knobs": "5.0.11",
    "@storybook/react": "5.0.11",
    "@types/babel-core": "6.25.6",
    "@types/babel__core": "^7.1.1",
    "@types/enzyme": "3.9.1",
    "@types/enzyme-adapter-react-16": "1.0.5",
    "@types/enzyme-to-json": "1.5.3",
    "@types/jest": "24.0.12",
    "@types/jest-cli": "23.6.0",
    "@types/prettier": "1.16.3",
    "@types/react": "16.8.17",
    "@types/react-dom": "16.8.4",
    "@types/rimraf": "2.0.2",
    "@types/storybook__addon-knobs": "5.0.0",
    "@types/storybook__react": "4.0.1",
    "@types/styled-components": "4.1.14",
    "@types/styled-system": "^4.1.3",
    "@types/webpack": "4.4.31",
    "babel-loader": "8.0.6",
    "babel-plugin-import": "1.11.0",
    "downshift": "^3.1.8",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.13.0",
    "enzyme-to-json": "3.3.5",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "nodemon": "1.19.0",
    "prettier": "1.17.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "styled-components": "4.2.0",
    "react-feather": "1.1.6",
    "react-popper": "1.3.3",
    "rimraf": "2.6.3",
    "source-map-loader": "0.2.4",
    "ts-jest": "24.0.2",
    "ts-loader": "6.0.0",
    "typescript": "3.4.5",
    "utility-types": "3.7.0",
    "webpack": "4.31.0",
    "webpack-cli": "3.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,yaml,yml}": [
      "npm run prettier",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "@coterminous/ui-lib": "<rootDir>/src/index.ts"
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "verbose": true,
    "bail": false,
    "collectCoverage": true,
    "setupTestFrameworkScriptFile": "<rootDir>/src/common/testHelpers/setupTestFrameworkScriptFile.ts",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
