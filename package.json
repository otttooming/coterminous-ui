{
  "name": "coterminous-styled",
  "version": "1.0.0",
  "description": "Reusable components for React projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/otttooming/coterminous-styled.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "webpack-dev-server",
    "docs": "NODE_ENV=production webpack -p",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build": "tsc -p tsconfig.dist.json",
    "clean": "rm -rf dist",
    "dist": "npm run clean && npm run build",
    "lint": "npm run tslint && echo 'tslint check: OK'",
    "tslint": "tslint --project ./tsconfig.json",
    "test": "jest --no-cache",
    "test:watch": "jest --watch",
    "test:update": " jest -u"
  },
  "author": "Ott Tooming",
  "license": "ISC",
  "dependencies": {
    "downshift": "1.31.15",
    "react": "16.4.0",
    "react-dom": "16.4.0",
    "react-popper": "^1.0.0-beta.6",
    "styled-components": "3.3.2"
  },
  "devDependencies": {
    "@storybook/addon-knobs": "3.4.6",
    "@storybook/react": "4.0.0-alpha.8",
    "@types/babel-core": "6.25.4",
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/enzyme-to-json": "^1.5.1",
    "@types/jest": "^23.0.0",
    "@types/prettier": "1.13.0",
    "@types/react": "16.3.16",
    "@types/react-dom": "16.0.6",
    "@types/storybook__addon-knobs": "3.3.1",
    "@types/storybook__react": "3.0.7",
    "babel-core": "6.26.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "jest": "^23.1.0",
    "jest-cli": "^23.1.0",
    "prettier": "1.13.4",
    "source-map-loader": "0.2.3",
    "ts-jest": "^22.4.6",
    "ts-loader": "4.3.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-loader": "^3.6.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "2.9.1",
    "utility-types": "^2.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "coterminous-styled": "<rootDir>/src/index.ts"
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "verbose": true,
    "bail": false,
    "collectCoverage": true,
    "setupTestFrameworkScriptFile": "<rootDir>/src/common/testHelpers/setupTestFrameworkScriptFile.ts",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
